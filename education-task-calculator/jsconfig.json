{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      // Aliases for the folders we want to use
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@assets/*": ["assets/*"],
      "@images/*": ["assets/img/*"],
      "@icons/*": ["assets/icons/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
